{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:cypress/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "cypress"
  ],
  "rules": {
    "no-param-reassign": "off",
    "no-new": "off",
    "import/extensions": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
